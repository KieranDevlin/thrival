type User {
  id: ID! @id
  email: String @unique
  password: String!
  name: String!
  isSpeaker: Speaker
  ownedTickets: [Event!]!
}

type Speaker {
  id: ID! @id
  owner: User @relation(link:INLINE)
  profile_picture: String!
  title: String!
  linkedin: String
  facebook: String
  description: String!
}

type Event {
  id: ID! @id
  title: String!
  description: String!
  date: Int!
  time: String
  thumbnail_url: String!
  location_name: String!
  location_address: String!
  price: Float
  maxTickets: Int!
  soldTickets: Int @default(value: 0)
  speakers: [Speaker]!
  theme: Theme @relation(link: INLINE)
}

type Notification {
  id: ID! @id
  timestamp: DateTime @createdAt
  announcement: String
}

type Theme {
  id: ID! @id
  name: String!
  hexcode: String! @default(value: "#000000")
}