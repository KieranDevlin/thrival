type User {
  id: ID! @id
  name: String!
  password: String!
  employerProfile: Employer
  applicantProfile: Applicant 
}
type JobPost {
  id: ID! @id
  createdAt: DateTime! @createdAt
  industry: String!
  location: String!
  discipline: [String!]! @scalarList(strategy:RELATION)
  totalRoles: Int! 
  employer: Employer!
  viewed: [Applicant] 
  description: String
}
type Employer {
  id: ID! @id
  jobpostings: [JobPost!] @relation(link: TABLE)
  contact: Contact @relation(link: INLINE)
}
type Contact {
  id: ID! @id
  email: String
  website: String 
}
type Applicant {
  id: ID! @id
  email: String! @unique
  linkedin: String!
  github: String!
  appliedJobs: [JobPost] @relation(link: TABLE)
  resume: [Resume] @relation(link: TABLE)
}
type Resume {
  id: ID! @id
  fullname: String!
  address: String!
  email: String!
  phone: String
  experience: String!
  education: String!
  skills: String!
}