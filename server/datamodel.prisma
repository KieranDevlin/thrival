type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  employerProfile: Employer
  applicantProfile: Applicant 
  profileImage: String @default(value:"https://www.pngitem.com/pimgs/m/30-307416_profile-icon-png-image-free-download-searchpng-employee.png")
}
type JobPost {
  id: ID! @id
  createdAt: DateTime! @createdAt
  rate: Int!
  industry: String!
  location: String!
  discipline: [String!]! @scalarList(strategy:RELATION)
  totalRoles: String! 
  employer: Employer!
  viewed: [Applicant] 
  description: String!
  roles: [String!]! @scalarList(strategy:RELATION)
  requirements: [String!]! @scalarList(strategy:RELATION)
}
type Employer {
  id: ID! @id
  jobpostings: [JobPost!] @relation(link: TABLE)
  linkedin: String
  contact: Contact @relation(link: INLINE)
}
type Contact {
  id: ID! @id
  email: String
  website: String 
}
type Applicant {
  id: ID! @id
  linkedin: String!
  github: String!
  appliedJobs: [JobPost] @relation(link: TABLE)
  resume: [Resume] @relation(link: TABLE)
}
type Resume {
  id: ID! @id
  fullname: String!
  address: String!
  email: String!
  phone: String
  experience: [String!] @scalarList(strategy:RELATION)
  education: [String!] @scalarList(strategy:RELATION)
  skills: [String!] @scalarList(strategy:RELATION)
}
